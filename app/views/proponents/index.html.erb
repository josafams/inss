<% if notice.present? %>
  <div class="alert alert-info" role="alert">
    <%= notice %>
  </div>
<% end %>

<table class="table table-striped table-bordered table-hover align-middle">
  <thead class="table-dark">
    <tr>
      <th>Nomes</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @proponents.each do |proponent| %>
      <tr>
        <td><%= proponent.name %></td>
        <td><%= link_to 'Mostrar', proponent, class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Editar', edit_proponent_path(proponent), class: 'btn btn-sm btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mt-3">
  <%= link_to 'Novo Proponente', new_proponent_path, class: 'btn btn-success' %>
  <nav aria-label="Proponent pages" class="mt-3 d-flex justify-content-center">
    <%= paginate @proponents, params: { controller: 'proponents', action: 'index' } %>
  </nav>
</div>
