<% if notice.present? %>
  <div class="alert alert-info" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title">Detalhes do Proponente</h5>
    <p class="card-text">
      <strong>Nome:</strong> <%= @proponent.name %>
    </p>
    <div class="d-flex gap-2">
      <%= link_to 'Edit', edit_proponent_path(@proponent), class: "btn btn-primary" %>
      <%= link_to 'Back', proponents_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>
