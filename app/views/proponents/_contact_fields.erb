<li class="nested-fields card p-3 mb-3">
  <h4 class="mb-3">Contato</h4>

  <div class="row g-3">
    <div class="col-md-6">
      <%= form.label :value, class: "form-label" %>
      <%= form.text_field :value, class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= form.label :contact_type, class: "form-label" %>
